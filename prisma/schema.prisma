generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model Playlist {
  id                Int      @id @default(autoincrement())
  playlistID        Int     
  tracks            Track[]
}

model Track {
  id                Int      @id @default(autoincrement())
  playlist          Playlist @relation(fields: [playlistID], references: [id])
  playlistID        Int
  permalink         String
  title             String
  artworkUrl        String
  waveformUrl       String
  stationPermalink  String
}



