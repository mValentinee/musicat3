generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // url = "file:./.env"
  url = env("DATABASE_URL")
}


model Playlist {
  playlistId Int @id
  tracks Tracks[]
  
}

model Tracks {
  playlistId Int
  trackId        Int   @id @unique 
  permaLink String  @unique
  title String @unique
  artworkURL String @unique
  waveformURL String @unique
  stationPermaLink String @unique
  Playlist Playlist @relation(references: [playlistId], fields: [playlistId])
}